<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="cache" class="ru.otus.simplecache.SimpleCacheEngine">
        <constructor-arg name="idleTimeMs" value="0"/>
        <constructor-arg name="isEternal" value="false"/>
        <constructor-arg name="lifeTimeMs" value="100"/>
        <constructor-arg name="maxElements" value="10"/>
    </bean>
    <bean id="dbServise" class="ru.otus.cachedDBservice.CachedDbService">
        <constructor-arg ref="cache"/>
    </bean>

</beans>